<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %> page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../partials/navigation.ejs')%>
    

    <main>
        
        <div class="container ">

            <div class="myCard__wrapper">
                <h1 class="text-center mt-5 mb-5 text-danger"><%= pageTitle %> Page</h1>
                <% if (product) { %>
                    <div class="row myCard__row">
                        <div class="col-lg-4 col-md-2 col-sm-2 col-xs-12"></div>
                        <div class="col-lg-4 col-md-8 col-sm-8 col-xs-12">
                            <div class="card" >
                                <img src="/<%= product.imageurl %>" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title"><%= product.title %></h5>
                                    <p class="card-text"><%= product.description %></p>
                                    <h5 class="card-text"> &#8377;<%= product.price %></h5>
                                    <% if ( isAuthenticated ) { %>
                                        <div class="myCardButton">
                                            <form action="/shop/cart" method="POST">
                                                <input type="hidden" name="id" id="id" value="<%= product._id %>">
                                                <button type="submit" class="btn btn-danger"">Add to Cart</button>
                                            </form>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-2 col-sm-2 col-xs-12"></div>
                    </div> 
                <% } else { %>
                    <p>Currently we don't have any products to display</p>
                <% } %>
            </div>

        </div>
    </main>

    
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>